# EquIntel Configuration
# Copy this file to .env and fill in your values

# OpenAI Configuration (for API-based LLM)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo

# Local LLM Configuration (for local models)
LLM_TYPE=openai  # Options: openai, local
LOCAL_MODEL_PATH=/path/to/your/local/model.gguf

# Vector Store Configuration
LANCE_DB_PATH=embeddings
TABLE_NAME=documents

# Embedding Model Configuration
EMBEDDING_MODEL=all-MiniLM-L6-v2

# Document Processing Configuration
CHUNK_SIZE=500
CHUNK_OVERLAP=100

# Streamlit Configuration
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=localhost 